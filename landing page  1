    <!-- JavaScript -->
    <script>
      let maxSubmissions = 20;
      let submissions = localStorage.getItem("submissionCount")
        ? parseInt(localStorage.getItem("submissionCount"))
        : 0;

      function updateSubmissionCount() {
        const remaining = maxSubmissions - submissions;
        document.getElementById("remainingSubmissions").textContent = remaining;
      }

      document
        .getElementById("leadForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();
          if (submissions >= maxSubmissions) {
            alert("Sorry, we have reached the limit for submissions.");
            return;
          }

          const formData = {
            name: document.getElementById("name").value,
            email: document.getElementById("email").value,
            business: document.getElementById("business").value,
            phone: document.getElementById("phone").value,
            problem: document.getElementById("problem").value,
          };

          fetch("save_submission.php", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(formData),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.status === "success") {
                localStorage.setItem("submissionCount", ++submissions);
                updateSubmissionCount();
                alert("Thank you! Your Free plan has been sent to your email.");
              }
            })
            .catch((error) => console.error("Error saving submission:", error));
        });

      updateSubmissionCount();
    </script>
